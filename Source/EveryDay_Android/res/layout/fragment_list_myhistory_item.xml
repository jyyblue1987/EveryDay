<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lay_fragment"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal"	
	android:background="@color/white"
	android:baselineAligned="false"
	>
	<LinearLayout
	    android:id="@+id/lay_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    >
	    <common.component.ui.MyTextView
	        android:id="@+id/txt_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="2016-02-29"
	        android:maxLines="2" 
	        />
	    <ImageView 
	        android:id="@+id/img_camera"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:layout_marginTop="10dip"
	        android:background="@drawable/camera"
	        />
	</LinearLayout>
	<LinearLayout
	    android:id="@+id/lay_name_gallery"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	  	<LinearLayout
	  	    android:id="@+id/lay_name"
	  	    android:layout_width="match_parent"
	  	    android:layout_height="wrap_content"
	  	    android:gravity="center_vertical" 
	  	    android:orientation="horizontal"
	  	    >
	  	    <common.component.ui.MyTextView
	  	        android:id="@+id/txt_title"
	  	        android:layout_width="0dip"
	  	        android:layout_height="wrap_content"
	  	        android:layout_weight="1.0" 
	  	        />
	  	    <ImageView
	  	        android:id="@+id/img_delete"
	  	        android:layout_width="20dip"
	  	        android:layout_height="20dip"
	  	        android:background="@drawable/gray_trash_icon" 
	  	        />
	  	</LinearLayout>
	  	<LinearLayout
	  	    android:id="@+id/lay_stage_list"
	  	    android:layout_width="match_parent"
	  	    android:layout_height="wrap_content"
	  	    android:orientation="horizontal" 
	  	    >
	  	    <RelativeLayout
	  	        android:id="@+id/lay_gallery_1"
	  	        android:layout_width="50dip"
	  	        android:layout_height="50dip"
	  	        >
	  	        <ImageView
		  	        android:id="@+id/img_gallery_1"
		  	        android:layout_width="match_parent"
		  	        android:layout_height="match_parent"
		  	        android:scaleType="centerCrop"
		  	        android:src="@color/gray" 
		  	        />
	  	    </RelativeLayout>
	  	    <RelativeLayout
	  	        android:id="@+id/lay_gallery_2"
	  	        android:layout_width="50dip"
	  	        android:layout_height="50dip"
	  	        android:layout_marginLeft="10dip"
	  	        >
	  	        <ImageView
		  	        android:id="@+id/img_gallery_2"
		  	        android:layout_width="match_parent"
		  	        android:layout_height="match_parent"
		  	        android:scaleType="centerCrop"
		  	        android:src="@color/gray" 
		  	        />
	  	    </RelativeLayout>
	  	  	<RelativeLayout
	  	        android:id="@+id/lay_gallery_3"
	  	        android:layout_width="50dip"
	  	        android:layout_height="50dip"
	  	        android:layout_marginLeft="10dip"
	  	        >
	  	        <ImageView
		  	        android:id="@+id/img_gallery_3"
		  	        android:layout_width="match_parent"
		  	        android:layout_height="match_parent"
		  	        android:scaleType="centerCrop"
		  	        android:src="@color/gray" 
		  	        />
	  	    </RelativeLayout>
	  	    <RelativeLayout
	  	        android:id="@+id/lay_gallery_4"
	  	        android:layout_width="50dip"
	  	        android:layout_height="50dip"
	  	        android:layout_marginLeft="10dip"
	  	        >
	  	        <ImageView
		  	        android:id="@+id/img_gallery_4"
		  	        android:layout_width="match_parent"
		  	        android:layout_height="match_parent"
		  	        android:scaleType="centerCrop"
		  	        android:src="@color/gray" 
		  	        />
	  	    </RelativeLayout>
	  	   
	  	</LinearLayout>
	</LinearLayout>
</LinearLayout>