<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/lay_stageitem_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <common.component.ui.MyTextView
            android:id="@+id/text_stageitem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" 
            android:text="address" />

        <common.component.ui.MyTextView
            android:id="@+id/text_stageitem_hisaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" 
            android:text="China" />

        <common.component.ui.MyTextView
            android:id="@+id/text_stageitem_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" 
            android:text="favorite" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_stageitem_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_stageitem_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/image12" />

        <common.component.ui.MyTextView
            android:id="@+id/text_stageitem_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" 
            android:layout_gravity="center_horizontal"
            android:text="Tae Guon Do" />

    </LinearLayout>

</LinearLayout>
