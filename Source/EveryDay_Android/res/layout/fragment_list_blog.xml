<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lay_fragment"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal"	
	>
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    >
	    <ImageView
	        android:id="@+id/img_photo"
	        android:layout_width="70dip"
	        android:layout_height="70dip"
	        android:src="@drawable/contact_icon" 
	        />
	    <common.component.ui.MyTextView
	        android:id="@+id/txt_address"
	        android:layout_width="50dip" 
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:ellipsize="true"
	        android:textColor="@color/orange"
	        />
	    <ImageView
	        android:id="@+id/img_add_contact"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:src="@drawable/add_friend_selector" 
	        />
	</LinearLayout>
	
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <common.component.ui.MyTextView
	        android:id="@+id/txt_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/black"
	        android:gravity="center_vertical"	        
	        />
	    <common.component.ui.MyTextView
	        android:id="@+id/txt_desc"
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:maxLines="2"
	        android:ellipsize="true"
	        android:textColor="@color/app_text_color"
	        />
	    <ImageView
	        android:id="@+id/img_gallery"
	        android:layout_width="match_parent"
	        android:layout_height="80dip"
	        android:src="@color/gray"
	        android:scaleType="centerCrop" 
	        />
	    <LinearLayout
	        android:id="@+id/lay_blog_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        >
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_time"
		        android:layout_width="0dip"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"
		        android:gravity="center_vertical"	        
		        />
	        <ImageView
	            android:id="@+id/img_star"
	            android:layout_width="20dip"
	            android:layout_height="20dip"
	            android:background="@drawable/black_star" 
	            />
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_star"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:gravity="center_vertical"	        
		        />
	        <ImageView
	            android:id="@+id/img_comment"
	            android:layout_width="20dip"
	            android:layout_height="20dip"
	            android:background="@drawable/black_comment" 
	            />
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_comment"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:gravity="center_vertical"	        
		        />
	    </LinearLayout>
	        
	</LinearLayout>
	
</LinearLayout>