<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/lay_historyitem_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_historyitem_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contact_icon" />

        <common.component.ui.MyTextView
            android:id="@+id/text_historyitem_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:textColor="@color/black" 
            android:text="" />

        <ImageView
            android:id="@+id/img_historyitem_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/emoji_1f49b" />

        <common.component.ui.MyTextView
            android:id="@+id/text_historyitem_hard_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" 
            android:text="200" />

        <ImageView
            android:id="@+id/img_historyitem_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/star" />

        <common.component.ui.MyTextView
            android:id="@+id/text_historyitem_star_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black" 
            android:text="100" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_historyitem_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <common.component.ui.MyTextView
            android:id="@+id/text_historyitem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" 
            android:text="地址:" />

        <common.component.ui.MyTextView
            android:id="@+id/text_historyitem_hisaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black" 
            android:text="" />

    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/lay_historyitem_3"
        android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"	
		>
		<RelativeLayout 
		    android:id="@+id/lay_history_info"
		    android:layout_width="0dip"
		    android:layout_height="match_parent"
		    android:layout_weight="0.2"
		    >
		    <common.component.ui.MyTextView
		        android:id="@+id/txt_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:text="Feb 16\n2016"
		        />
		    <LinearLayout
		        android:id="@+id/lay_comment_like"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:orientation="vertical"
		        android:layout_alignParentBottom="true"
		        >
		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"	
		            android:orientation="horizontal"             
		            >
	            	<ImageView
	                    android:id="@+id/img_like_count_icon"
	                    android:layout_width="20dip"
	                    android:layout_height="20dip"
	                    android:background="@drawable/like_black_icon" 
	                    />
	                <common.component.ui.MyTextView
	                    android:id="@+id/txt_like_count"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="3dip"
	                    android:text="1"
	                    android:textColor="@color/black" 
	                    />
		        </LinearLayout>
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"	
		            android:orientation="horizontal"      
		            android:layout_marginTop="5dip"       
		            >
	            	<ImageView
	                    android:id="@+id/img_comment_count_icon"
	                    android:layout_width="20dip"
	                    android:layout_height="20dip"
	                    android:src="@drawable/comment_black_icon"
	                    />
	                <common.component.ui.MyTextView
	                    android:id="@+id/txt_comment_count"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="3dip"
	                    android:text="1"
	                    android:textColor="@color/black" 
	                    />
		        </LinearLayout>
		        
		        
		    </LinearLayout>
		</RelativeLayout>
		<RelativeLayout
		    android:id="@+id/lay_history_content"
		    android:layout_width="0dip"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.8"
		    >
		    <ImageView
			    android:id="@+id/img_history_preview"
			    android:layout_width="match_parent"
			    android:layout_height="150dip"
			    android:scaleType="fitXY"
			    android:src="@drawable/default_image_bg"		    
			    />
		    <TextView
			    android:id="@+id/txt_history"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_alignParentBottom="true"
			    android:paddingLeft="10dip"
			    android:paddingRight="10dip"
			    android:maxLines="3"
			    android:ellipsize="end"
			    android:text="  "
			    android:textColor="@color/white"
			    android:background="#BB000000" 
			    />  	 
			   
		</RelativeLayout>
	
		
	</LinearLayout>

</LinearLayout>
