<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/fragment_header"
        layout="@layout/fragment_header" />
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            >
            
            <ImageView
                android:id="@+id/img_photo_icon" 
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:src="@drawable/contact_icon"
                />
            <include
		        android:id="@+id/fragment_username"
		        layout="@layout/fragment_label_edit" />
            <include
		        android:id="@+id/fragment_email"
		        layout="@layout/fragment_label_edit" />
		    <include
		        android:id="@+id/fragment_password"
		        layout="@layout/fragment_label_edit" />
		    <include
		        android:id="@+id/fragment_confirm_password"
		        layout="@layout/fragment_label_edit" />
		    		    
		    
		    <common.component.ui.MyButton
		        android:id="@+id/btn_register"
		        android:layout_width="100dip"
		        android:layout_height="30dip"
		        android:background="@drawable/button_greeen_bg"
		        android:text="登记册"
		        android:textColor="@color/white" />       
            
            
        </LinearLayout>
    </ScrollView>
    
</LinearLayout>