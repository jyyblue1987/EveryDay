<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lay_fragment"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="vertical"	
	>

	<RelativeLayout
	    android:id="@+id/lay_history_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ImageView
		    android:id="@+id/img_history_preview"
		    android:layout_width="match_parent"
		    android:layout_height="150dip"
		    android:scaleType="centerCrop"
		    android:src="@drawable/default_back_bg"		    
		    />
	       	 
		<ImageView
	        android:id="@+id/img_video_icon"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:layout_centerInParent="true"
	        android:background="@drawable/video_icon"
	        />  
	</RelativeLayout>
	<LinearLayout
        android:id="@+id/lay_blog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:gravity="center_vertical"
        >
        <common.component.ui.MyTextView
	        android:id="@+id/txt_time"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1.0"
	        android:gravity="center_vertical"	        
	        />
        <ImageView
            android:id="@+id/img_star"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/black_star" 
            />
        <common.component.ui.MyTextView
	        android:id="@+id/txt_star"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"		        
	        android:gravity="center_vertical"	  
	        android:text="000"      
	        />
        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:background="@drawable/black_comment" 
            />
        <common.component.ui.MyTextView
	        android:id="@+id/txt_comment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"		        
	        android:gravity="center_vertical"	
	        android:text="000"          
	        />
    </LinearLayout>
    
	<TextView
	    android:id="@+id/txt_history"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="我很高兴"	     
	    />
	
</LinearLayout>