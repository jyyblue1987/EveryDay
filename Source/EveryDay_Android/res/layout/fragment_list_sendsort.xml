<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lay_fragment"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="horizontal"	
	>
	<LinearLayout
	    android:id="@+id/lay_photo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center_horizontal"
	    >
	    <RelativeLayout	        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >
	        <ImageView
	            android:id="@+id/img_level"
	            android:layout_width="70dip"
	            android:layout_height="70dip"
	            android:background="@drawable/main_photobg2" 
	            />
	        <common.component.ui.CircularImageView
	            android:id="@+id/img_photo"
	            android:layout_width="55dip"
	            android:layout_height="55dip" 
	            android:layout_centerInParent="true"
	            android:src="@drawable/contact_icon"
            	/>    
        </RelativeLayout>
	    <TextView
	        android:id="@+id/txt_rank"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:text="01"
	        android:textStyle="bold"
	        android:textColor="@color/app_red_color"
	        />
	</LinearLayout>
	
	
	<LinearLayout
	    android:id="@+id/lay_gallery"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	    <common.component.ui.MyTextView
	        android:id="@+id/txt_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textColor="@color/black"	        
	        android:gravity="center_vertical"	        
	        />	    
	    
	    <LinearLayout
	        android:id="@+id/lay_blog_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" 
	        android:gravity="center_vertical"
	        >
	        <ImageView
	            android:id="@+id/img_star"
	            android:layout_width="20dip"
	            android:layout_height="20dip"
	            android:background="@drawable/black_star" 
	            />
	        
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_send_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:gravity="center_vertical"	  
		        android:text="退出"      
		        />
	        
	        <common.component.ui.MyTextView
		        android:id="@+id/txt_star"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:gravity="center_vertical"	  
		        android:text="000"      
		        />
	     
	    </LinearLayout>
	        
	</LinearLayout>
	
</LinearLayout>