<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/lay_fragment"
	android:layout_width="match_parent" 
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="horizontal"	
	>
	<ImageView
	    android:id="@+id/img_star_1"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:background="@drawable/star" 
	    />    

	<ImageView
	    android:id="@+id/img_star_2"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:background="@drawable/star" 
	    />    
	<ImageView
	    android:id="@+id/img_star_3"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:background="@drawable/star" 
	    />    

	<ImageView
	    android:id="@+id/img_star_4"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:background="@drawable/star" 
	    />
	    
	<ImageView
	    android:id="@+id/img_star_5"
	    android:layout_width="30dip"
	    android:layout_height="30dip"
	    android:background="@drawable/star" 
	    />    
					
	<Button
	    android:id="@+id/btn_reward"
	    android:layout_width="100dip"
	    android:layout_height="30dip"
	    android:layout_marginLeft="30dip"
	    android:text="Reward"
	    android:textColor="@color/white"
	    android:background="@drawable/button_greeen_bg" 
	    />
</LinearLayout>